<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:padding="32dp">

    <TextView
        android:id="@+id/tv_socially_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:text="Socially"
        android:textColor="#B85C5C"
        android:textSize="48sp"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/profile_container"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/tv_socially_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/circle_profile_bg"
        android:gravity="center">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/profile_image"
            android:scaleType="centerCrop" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_container"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="jacob_w"
        android:textColor="#333333"
        android:textSize="16sp" />


    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/tv_username"
        android:layout_marginTop="32dp"
        android:background ="@drawable/login_button_bg"
        android:text="Log in"
        android:textColor="@android:color/white"
        app:backgroundTint="@null"
        android:textSize="20sp"
        android:textStyle="bold"/>




    <TextView
        android:id="@+id/tv_switch_accounts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Switch accounts"
        android:textColor="#B85C5C"
        android:textSize="18sp" />


    <LinearLayout
        android:id="@+id/signup_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account? "
            android:textColor="#666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up."
            android:textColor="#B85C5C"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:id="@+id/home_indicator"
        android:layout_width="134dp"
        android:layout_height="5dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:src="@drawable/home"
        android:contentDescription="Home Indicator" />

</RelativeLayout>