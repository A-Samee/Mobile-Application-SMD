<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


    <LinearLayout
        android:id="@+id/top_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:elevation="4dp">

        <LinearLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:background="@android:color/white">


            <TextView
                android:id="@+id/tab_following"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Following"
                android:textColor="#B85C5C"
                android:textSize="16sp"
                android:gravity="center"
                 />

            <TextView
                android:id="@+id/tab_you"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="You"
                android:textColor="#B85C5C"
                android:textSize="16sp"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@drawable/tab_following_selected"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:background="#FAFAFA">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Follow Requests"
                android:textSize="16sp"
                android:textColor="#B85C5C"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_tabs"
        android:layout_above="@id/bottomNavigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="12dp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp">

                <ImageView
                    android:id="@+id/profile_karen"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/profile4"
                    android:scaleType="centerCrop"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toEndOf="@id/profile_karen"
                    android:layout_toStartOf="@id/post_thumbnail_karen"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="karennne liked your photo. 1h"
                        android:textSize="14sp"
                        android:textColor="#000000" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/post_thumbnail_karen"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/img1"
                    android:scaleType="centerCrop"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true" />

            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp">

                <RelativeLayout
                    android:id="@+id/profile_stack"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true">


                    <ImageView
                        android:id="@+id/profile_kiero"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/profile2"
                        android:scaleType="centerCrop"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true" />


                    <ImageView
                        android:id="@+id/profile_zack"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/profile3"
                        android:scaleType="centerCrop"
                        android:layout_marginStart="20dp"
                        android:layout_centerVertical="true" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toEndOf="@id/profile_stack"
                    android:layout_toStartOf="@id/post_thumbnail_kiero"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="kiero_d, zackjohn and 26 others"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="liked your photo. 3h"
                        android:textSize="14sp"
                        android:textColor="#8E8E93" />

                </LinearLayout>


                <ImageView
                    android:id="@+id/post_thumbnail_kiero"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/img2"
                    android:scaleType="centerCrop"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This Week"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp">

                <ImageView
                    android:id="@+id/profile_craig"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="4dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toEndOf="@id/profile_craig"
                    android:layout_toStartOf="@id/post_thumbnail_craig"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="craig_love mentioned you in a"
                        android:textSize="14sp"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="comment: @jacob_w exactly.."
                        android:textSize="14sp"
                        android:textColor="#8E8E93" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2d"
                        android:textSize="12sp"
                        android:textColor="#8E8E93"
                        android:layout_marginTop="4dp" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="8dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/like"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reply"
                            android:textSize="12sp"
                            android:textColor="#8E8E93" />

                    </LinearLayout>

                </LinearLayout>


                <ImageView
                    android:id="@+id/post_thumbnail_craig"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/img3"
                    android:scaleType="centerCrop"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp">


                <ImageView
                    android:id="@+id/profile_martini"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/profile2"
                    android:scaleType="centerCrop"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toEndOf="@id/profile_martini"
                    android:layout_toStartOf="@id/message_button_martini"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="martini_rond started"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="following you. 3d"
                        android:textSize="14sp"
                        android:textColor="#8E8E93" />

                </LinearLayout>

                <Button
                    android:id="@+id/message_button_martini"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="Message"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:background="@drawable/rounded_button_transparent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp">


                <ImageView
                    android:id="@+id/profile_max"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/profile1"
                    android:scaleType="centerCrop"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toEndOf="@id/profile_max"
                    android:layout_toStartOf="@id/message_button_max"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="maxjacobson started"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="following you. 3d"
                        android:textSize="14sp"
                        android:textColor="#8E8E93" />

                </LinearLayout>

                <Button
                    android:id="@+id/message_button_max"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="Message"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:background="@drawable/rounded_button_transparent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp">

                <ImageView
                    android:id="@+id/profile_potter"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/profile2"
                    android:scaleType="centerCrop"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toEndOf="@id/profile_potter"
                    android:layout_toStartOf="@id/follow_button_mis_potter"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="mis_potter started following"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="you. 3d"
                        android:textSize="14sp"
                        android:textColor="#8E8E93" />

                </LinearLayout>

                <Button
                    android:id="@+id/follow_button_mis_potter"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="Follow"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:background="#B85c5c"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This Month"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp"
                android:layout_marginBottom="80dp">


                <ImageView
                    android:id="@+id/profile_humphrey"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/profile3"
                    android:scaleType="centerCrop"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toEndOf="@id/profile_humphrey"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="s_humphrey started"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="following you. 2w"
                        android:textSize="14sp"
                        android:textColor="#8E8E93" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="#FFFFFF">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/home1"
                android:layout_weight="1"
                android:tint="#B85C5C"
                android:gravity="center"
                tools:ignore="UseAppTint" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/search"
                android:layout_weight="1"
                android:tint="#B85C5C"
                android:gravity="center"
                tools:ignore="UseAppTint" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/create"
                android:layout_weight="1"
                android:tint="#B85C5C"
                android:gravity="center"
                tools:ignore="UseAppTint" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/reels"
                android:layout_weight="1"
                android:tint="#B85C5C"
                android:gravity="center"
                tools:ignore="UseAppTint" />

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/profile_image"
                android:layout_weight="1"
                android:gravity="center" />
        </LinearLayout>
        <ImageView
            android:layout_width="134dp"
            android:layout_height="5dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/home"
            android:contentDescription="Home Indicator"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"/>
    </LinearLayout>
</RelativeLayout>