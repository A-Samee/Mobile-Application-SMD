<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B85C5C">


    <LinearLayout
        android:id="@+id/profile_container"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:background="@drawable/rounded_square_profile"
        android:gravity="center"
        android:clipToOutline="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/mother_profile1"
            android:clipToOutline="true" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/caller_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_container"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mother"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="❤️"
            android:textSize="20sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/call_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/caller_info"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="03:12"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/control_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingStart="64dp"
        android:paddingEnd="64dp">


        <ImageView
            android:id="@+id/btn_chat"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_chat_outline"
            android:tint="@android:color/white"
            tools:ignore="UseAppTint"
            android:padding="12dp" />

        <LinearLayout
            android:id="@+id/btn_end_call"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_weight="0"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="48dp"
            android:background="@drawable/end_call_button"
            android:gravity="center">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/end"
                android:tint="@color/white"
                tools:ignore="UseAppTint" />

        </LinearLayout>

        <ImageView
            android:id="@+id/btn_speaker"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_volume_up"
            android:tint="@android:color/white"
            android:padding="12dp"
            tools:ignore="UseAppTint" />

    </LinearLayout>

 <ImageView
        android:layout_width="134dp"
        android:layout_height="5dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:src="@drawable/home"
        android:contentDescription="Home Indicator" />

</RelativeLayout>