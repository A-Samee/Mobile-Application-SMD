<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#22000000">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/close"
            android:layout_weight="1"
            android:contentDescription="Close" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/people"
            android:layout_weight="1"
            android:contentDescription="People" />


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/text"
            android:layout_weight="1"
            android:contentDescription="Text" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/stickers"
            android:layout_weight="1"
            android:contentDescription="Sticker" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/music"
            android:layout_weight="1"
            android:contentDescription="MUsic" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/filters"
            android:layout_weight="1"
            android:contentDescription="Filters" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/options"
            android:layout_weight="1"
            android:contentDescription="Options" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_above="@+id/button_layout">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/img1"
            android:scaleType="centerCrop"
            android:contentDescription="Bird image" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_above="@+id/home_indicator"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="4dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Your stories"
            android:background="@drawable/rounded_button"
            android:layout_weight="1"
            android:textColor="#FFFFFF" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Close Friends"
            android:layout_weight="1"
            android:background="@drawable/rounded_button"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/vector"
            android:contentDescription="Next"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/home_indicator"
        android:layout_width="134dp"
        android:layout_height="16dp"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/home"
        android:contentDescription="Home Indicator" />
</RelativeLayout>